
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<form action="/Admin/ChangePassword" method="post">
    <div class="row" style="background-image: url('../Content/img/images%20(27).jfif'); background-repeat: no-repeat; background-size: 100% 100%; margin-top:-1.5%;">
        <div class="col-sm-4"></div>
        <div class=" col-sm-4" style="min-height:500px;border:2px solid orange; border-radius:30px;margin-bottom:20px;background:white;margin-top:15px">
            <div class="row">
                <div style="background:orange;font-size:35px;font-weight:bold;color:white;min-height:50px;width:100%;text-align:center;font-family:Gabriola;border-radius:20px 20px 0px 0px"> CHANGE PASSWORD</div>
            </div>
            <br /><br />
            Old Password<br />
            <input type="password" name="oldpasswd" class="form-control" placeholder="Enter old Password" style="font-family:Gabriola;font-size:18px" />
            <br /><br />
            New Password<br />
            <input type="password" name="newpasswd" class="form-control" placeholder="Enter new Password" style="font-family:Gabriola;font-size:18px" />
            <br /><br/>
            Confirm Password<br />
            <input type="password" name="confirmpasswd" class="form-control" placeholder="Enter Password" style="font-family:Gabriola;font-size:18px" />
            <br /><br />
            <center><input type="submit" value="Submit" class="btn btn-success" style="font-family:Gabriola;font-size:18px;width:150px"/></center>
        </div>
        <div class="col-sm-4"></div>
    </div>
    </form>


